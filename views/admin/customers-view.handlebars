<div class="header-area">
    <h1>{{customer.first_name}} {{customer.last_name}} ({{customer.id}})</h1>
    <a href="/admin/customers/edit/{{customer.id}}" class="btn">Edit</a>

</div>

<section class="info-section">
    <h2>Contacts</h2>
    <table>
      <tr>
        <th>Address</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Username</th>
      </tr>
      <tr>
        <td>{{customer.address}}</td>
        <td>{{customer.phone}}</td>
        <td>{{customer.email}}</td>
        <td>{{customer.username}}</td>
      </tr>
    </table>
</section>

<section class="info-section">
    <h2>Service Profile</h2>
    <table>
      <tr>
        <th>Product</th>
        <th>Schedule</th>
        <th>Cleaner</th>
      </tr>
      <tr>
        <td>{{customer.product.name}}</td>
        <td>{{customer.schedule}}</td>
        <td>{{customer.employee.first_name}}</td>
      </tr>
    </table>
</section>

<section class="info-section">
    <h2>Accounting</h2>
    <p>Credit balance (overpayments): <strong>{{customer.account_balance}}</strong></p>
    <p>Amount of unpaid invoices: <strong>{{unpaidInvoiceBalance}}</strong></p>
    <p>Amount of unbilled services and expenses: <strong>{{unbilledTotal}}</strong></p>

    <a href="/admin/records/?dateAfter=2000-01-01&dateBefore=2099-01-01&includeService=service&includeExpense=expense&includeInvoice=invoice&includePayment=payment&filterByCustomer={{customer.id}}" class="btn">View Ledger</a>
</section>
