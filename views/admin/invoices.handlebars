<h1>Generate Invoices</h1>

<span>Bill through:</span> <input type="date" id="end_date" value="{{today}}"/><br><br>

<button onclick="generateBatchInvoices()">Generate Invoices for all customers</button> (batch invoicing last run on {{lastBatchRun}})<br><br>

<button onclick="generateSingleInvoice()">Generate Individual Invoice</button> <span>Select Customer</span> <input type="text" id="customer_id"/> 

<hr>

<h3>accounts with uninvoiced services or expenses: {{customersCount}}</h3>
{{#if customersCount}}
<table>
    <tr>
        <th>customer id</th>
        <th>name</th>
        <th></th>
    </tr>
{{#each customers}}
    <tr>
        <td>{{this.id}}</td>
        <td><a href="/admin/customers/view/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></td>
    </tr>
{{/each}}
</table>
{{/if}}
<script src="/js/admin-invoices-generator.js"></script>




